{
    "manifest_version": 2,
    "name": "어포잉탭",
    "version": "1.0.0",

    "description": "시작페이지를 예약할 수 있는 태스크 스케쥴러",

    "default_locale": "ko",

    "sidebar_action": {
        "default_page" : "sidebar.html",
        "default_icon" : {
            "16" : "icon/icon_16.png"
        },
        "default_title" : "어포잉탭",
        "use_navigation_bar" : false,
        "mobile_user_agent" : true
    }, 

    "background": {
        "scripts": []
    },

    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "content_scripts": [],
    "permissions": []
}